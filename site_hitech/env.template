# Production Environment Variables Template for Hitech NDT
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
DJANGO_SETTINGS_MODULE=site_hitech.settings_production

# Database Configuration
DB_NAME=hitech_ndt_db
DB_USER=hitech_ndt_user
DB_PASSWORD=your_secure_database_password_here
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (for SSL notifications and contact forms)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@hitechndt.vn

# Admin URL (change for security)
ADMIN_URL=admin/

# SSL Configuration
SSL_DOMAIN=hitechndt.vn
SSL_EMAIL=admin@hitechndt.vn

# Backup Configuration
BACKUP_LOCATION=/backup/hitech-ndt

# Redis (if using)
# REDIS_URL=redis://localhost:6379/0

# Additional Security
ALLOWED_HOSTS=hitechndt.vn,www.hitechndt.vn,localhost,127.0.0.1 