[Unit]
Description=Gunicorn instance to serve Hitech NDT
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/hitechndt
Environment="PATH=/var/www/hitechndt/venv/bin"
ExecStart=/var/www/hitechndt/venv/bin/gunicorn \
    --workers 3 \
    --bind 127.0.0.1:8000 \
    --timeout 120 \
    --max-requests 1000 \
    --max-requests-jitter 100 \
    --preload \
    site_hitech.wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target